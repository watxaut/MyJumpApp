<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Restrict access to specific subdirectories only for security -->
    
    <!-- Jump videos storage - specific path only -->
    <files-path name="jump_videos" path="videos/" />
    
    <!-- Jump images/screenshots storage -->
    <files-path name="jump_images" path="images/" />
    
    <!-- Temporary files for processing -->
    <cache-path name="temp_processing" path="processing/" />
    
    <!-- Session data exports -->
    <files-path name="session_exports" path="exports/" />
    
    <!-- Database backups (if needed) -->
    <files-path name="db_backups" path="backups/" />
</paths>